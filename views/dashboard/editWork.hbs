<main class=''>

    <div class='home row'>

        <div class='full-container overflow-auto'>
            <div class='margin-container'>

                <a href="/dashboard" class="card-btn btn btn-outline-primary">Return</a>
                <h1>Edit Work</h1>

                <form class="form" autocomplete="off" action="/dashboard/{{workEdit._id}}/edit" method="POST"
                    enctype="multipart/form-data">

                    {{!-- <form class="form" autocomplete="off" action="/dashboard/add" method="POST"
                    enctype="multipart/form-data"> --}}

                    <div class="row noMargin">

                        <div class='form-group col-6'>
                            <label class="label" for="title">Title</label>
                            <input class="form-control" id="title" value='{{workEdit.title}}' type="text" name="title"
                                placeholder="Title">
                        </div>

                        <div class="form-group col-6">
                            <label for="start">Date de cr√©ation</label>
                            <input class="form-control" id="editDate" type="datetime-local"
                                {{!-- min="{{formatDateForInput workEdit.dateCreation "min"}}"  --}} name="dateCreation"
                                value="{{formatDateForInput workEdit.dateCreation "current"}}">
                        </div>


                        <div class='multiple-input'>

                            <select multiple class='form-control' placeholder="Enter tag + tab to validate" name="tag"
                                data-role="tagsinput">
                                {{!-- {{#each workEdit.tag}}
                                <option value="{{this}}">{{this}}</option>
                                {{/each}} --}}

                                {{#each workEdit.tag}}
                                <option value="{{this}}">value</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group col-12">

                            <label for="description">Description</label>
                            <textarea class="form-control" type='text' id="description" placeholder="Description"
                                name='description' rows="3">{{workEdit.description}}</textarea>
                        </div>

                        <div class="form-group col-12">
                            <label for="place">Link to website</label>
                            <input id="location" type="string" name="link" value='{{workEdit.link}}'
                                placeholder="Link or location for the event" class="form-control">
                        </div>




                        {{!-- <input type="text"
                            value="Amsterdam,Washington,Sydney,Beijing,Cairo,Washington,Sydney,Beijing,Cairo"
                            data-role="tagsinput"> --}}

                        {{!-- <select multiple data-role="tagsinput">
                            <option value="Amsterdam">Amsterdam</option>
                            <option value="Washington">Washington</option>
                            <option value="Sydney">Sydney</option>
                            <option value="Beijing">Beijing</option>
                            <option value="Cairo">Cairo</option>
                            </select> --}}

                        {{!-- UPLOAD TO CLOUDINARY --}}

                        <div class="form-group col-6">
                            <label class="label" for="file-1">Choose Image preview...</label>
                            <input class="form-control" name="image" value='{{workEdit.imagePreviex}}' type="file"
                                id="file-1">
                        </div>


                        <div class="form-group col-6">
                            <label class="label" for="file-2">Choose image 2...</label>
                            <input class="form-control" name='imgOne' value='{{workEdit.imgOne}}' type="text"
                                id="file-2">
                        </div>


                        <div class="form-group col-6">
                            <label class="label" for="validatedCustomFile">Choose image 3...</label>
                            <input class="form-control" name='imgTwo' value='{{workEdit.imgTwo}}' type="text"
                                id="file-3">
                        </div>


                        <div class="form-group col-6">
                            <label class="label" for="validatedCustomFile">Choose image 4...</label>
                            <input class="form-control" name='imgThree' value='{{workEdit.imgThree}}' type="text"
                                id="file-4">
                        </div>

                        <div class="form-group col-12">
                            <label class="label" for="validatedCustomFile">Link to video...</label>
                            <input class="form-control" type="text" id="video" value='{{workEdit.video}}' name="video">
                        </div>

                        <div class="form-group col-12">
                        </div>
                        <button class="btn btn-primary btn-block">Envoyer</button>
                </form>

            </div>
        </div>
    </div>
    </div>



