{{!--  CARDS--}}

<h4>Latest projects</h4>

<div class='card-block'>
    {{#each allWork}}
    <div class="card-container" style="width: 18rem;">
        <div class='img-container'>
            <img class="card-img" src="{{this.imagePreview}}" alt="my work presentation">
        </div>
        {{!-- <img class="card-img-top img-card" src="{{this.imagePreview}}" alt="Card image cap"> --}}

        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="/work/{{this._id}}" class="card-btn btn btn-primary btn-block">View</a>
        </div>
    </div>
    {{/each}}


</div>