                <a href="/dashboard" class="card-btn btn btn-outline-primary">Return</a>
                <h1>Edit Work</h1>

                <form class="form" autocomplete="off" action="/dashboard/add" method="POST"
                    enctype="multipart/form-data">

                    <div class="row noMargin">

                        <div class='form-group col-6'>
                            <label class="label" for="title">Title</label>
                            <input class="form-control" id="title" value="{{workEdit.title}}" type="text" name="title"
                                placeholder="Title">
                        </div>

                        <div class="form-group col-6">
                            <label for="start">Date de cr√©ation</label>
                            <input class='form-control' value="{{workEdit.dateCreation}}" type="date" id="editDate"
                                name="creationDate">
                        </div>


                        <div class="form-group col-12">

                            <label for="description">Description</label>
                            <textarea class="form-control" type='text' id="description" name='description'
                                rows="3">{{workEdit.description}}</textarea>
                        </div>

                        <div class="form-group col-12">
                            <label for="place">Link to website</label>
                            <input id="location" type="string" name="link" value="{{workEdit.link}}" placeholder="Link or location for the event"
                                class="form-control">
                        </div>

